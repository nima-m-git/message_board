extend layout

block content
    h1 Please log in.
    form(action='login' method='post')
        div 
            label(for='username') Username: 
            input(name='username' type='text')
        div
            label(for='password') Password: 
            input(name='password' type='password')
        div
            button(type='submit') Log In
    
    p or 
        |
        a(href='/users/signup') Sign Up.

    if error
        p= error